<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/edit"
            android:rotation="180"
            android:src="@drawable/right_arrow"
            app:layout_constraintWidth_percent="0.05"
            app:tint="@color/pink"
             />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Payment"
            android:textColor="@color/pink"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            />

        <TextView
            android:id="@+id/tv_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Change"
            android:gravity="end"
            android:textColor="@color/pink"
            android:textSize="10dp"
           />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:backgroundTint="#FFDDE8"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_12sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_CoinsText"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="#545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Coins"/>

                        <TextView
                            android:id="@+id/tv_totalAmount"
                            android:textColor="#545454"
                            android:textSize="@dimen/_9sdp"
                            android:fontFamily="@font/poppins_semibold"

                            android:layout_width="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:text="₹100.00"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_savePercent"
                        android:textColor="#D9D9D9"
                        android:fontFamily="@font/poppins_semibold"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:text="Save 10%"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:backgroundTint="#545454"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_4sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="Final Amount"/>

                        <TextView
                            android:id="@+id/tv_finalAmount"
                            android:layout_width="match_parent"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="₹100.00"/>

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Coupon Code"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="#4B164C"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_8sdp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"

                app:cardCornerRadius="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:background="@drawable/d_bg_coupon_edittext_selected"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_4sdp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"

                            android:padding="@dimen/_1sdp"
                            android:src="@drawable/baseline_percent_24"
                            android:background="@drawable/d_pink_rounded_circle"/>

                        <EditText
                            android:id="@+id/et_couponCode"
                            style="@style/EditTextStyle"
                            android:hint="Enter Coupon Code"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp"

                            android:layout_weight="0.90"
                            android:fontFamily="@font/poppins_semibold" />

                        <ImageView
                            android:id="@+id/iv_correct"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:visibility="invisible"

                            android:src="@drawable/baseline_check_24"
                            android:background="@drawable/d_green_rounded_circle"/>


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


           <LinearLayout
               android:id="@+id/ll_allCoupons"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginTop="@dimen/_5sdp"

               android:orientation="horizontal"
               >

               <TextView
                   android:id="@+id/tv_allCoupons"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="8dp"
                   android:textColor="@color/pin_color"
                   android:fontFamily="@font/poppins_semibold"
                   android:text="View All Coupons"/>

               <ImageView
                   android:id="@+id/iv_allCoupons"
                   android:layout_width="9dp"
                   android:layout_height="9dp"

                   android:layout_marginLeft="@dimen/_3sdp"
                   android:padding="@dimen/_1sdp"
                   android:src="@drawable/baseline_arrow_forward_24"
                   android:background="@drawable/d_pink_rounded_circle"/>



           </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"

        android:padding="@dimen/_10sdp"
        app:cornerRadius="@dimen/_18sdp"
        android:text="Pay"
        android:textColor="@color/white"
        android:backgroundTint="@color/pink"
        />






</LinearLayout>